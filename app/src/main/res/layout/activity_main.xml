<?xml version="1.0" encoding="UTF-8"?>

<GridLayout
    android:rowCount="8"
    android:orientation="horizontal"
    android:columnCount="9"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:paddingStart="10sp"
        android:text=""
        android:textSize="25sp" />

    <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="/"
            android:layout_columnSpan="2"
            android:layout_column="3"
            android:layout_row="0"
            android:id="@+id/division"
            android:onClick="click"
            android:layout_margin="2dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="1"
        android:layout_column="0"
        android:layout_row="1"
        android:id="@+id/nbr1"
        android:onClick="click"
        android:layout_margin="2dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="2" android:layout_column="1"
        android:layout_row="1"
        android:id="@+id/nbr2"
        android:onClick="click"
        android:layout_margin="2dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="3"
        android:layout_column="2"
        android:layout_row="1"
        android:id="@+id/nbr3"
        android:onClick="click"
        android:layout_margin="2dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="*"
        android:layout_column="3"
        android:layout_row="1"
        android:id="@+id/multi"
        android:onClick="click"
        android:layout_margin="2dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="4"
        android:layout_column="0"
        android:layout_row="2"
        android:id="@+id/nbr4"
        android:onClick="click"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="7"
        android:layout_column="0"
        android:layout_row="3"
        android:id="@+id/nbr7"
        android:onClick="click"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0"
        android:layout_columnSpan="2"
        android:layout_column="0"
        android:layout_row="4"
        android:id="@+id/nbr0"
        android:layout_gravity="fill"
        android:onClick="click"
        android:layout_margin="2dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="5"
        android:layout_column="1"
        android:layout_row="2"
        android:id="@+id/nbr5"
        android:onClick="click"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="8"
        android:layout_column="1"
        android:layout_row="3"
        android:id="@+id/nbr8"
        android:onClick="click"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="."
        android:layout_column="2"
        android:layout_row="4"
        android:id="@+id/point"
        android:onClick="click"
        android:layout_margin="2dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="6"
        android:layout_column="2"
        android:layout_row="2"
        android:id="@+id/nbr6"
        android:onClick="click"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="-"
        android:layout_column="3"
        android:layout_row="2"
        android:id="@+id/moin"
        android:onClick="click"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="+"
        android:layout_column="3"
        android:layout_row="3"
        android:id="@+id/adision"
        android:layout_gravity="fill"
        android:layout_rowSpan="3"
        android:onClick="click"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="="
        android:layout_columnSpan="2"
        android:layout_column="0"
        android:layout_row="5"
        android:id="@+id/eq"
        android:layout_gravity="fill"
        android:onClick="click"
        android:layout_margin="2dp"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="c"
        android:layout_column="2"
        android:layout_row="5"
        android:id="@+id/c"
        android:onClick="click"
        android:layout_margin="2dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="9"
        android:layout_column="2"
        android:layout_row="3"
        android:id="@+id/nbr9"
        android:onClick="click"/>

</GridLayout>